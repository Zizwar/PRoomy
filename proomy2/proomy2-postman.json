  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set token from login response",
          "if (pm.response && pm.response.json && pm.response.json().token) {",
          "    pm.environment.set('token', pm.response.json().token);",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-save important IDs for next requests",
          "if (pm.response.code === 200 || pm.response.code === 201) {",
          "    const responseData = pm.response.json();",
          "    ",
          "    // Save authentication token",
          "    if (responseData.token) {",
          "        pm.environment.set('token', responseData.token);",
          "        console.log('Token saved:', responseData.token.substring(0, 20) + '...');",
          "    }",
          "    ",
          "    // Save room ID from room creation",
          "    if (responseData.room && responseData.room.id) {",
          "        pm.environment.set('room_id', responseData.room.id);",
          "        console.log('Room ID saved:', responseData.room.id);",
          "    }",
          "    ",
          "    // Save message ID from message creation", 
          "    if (responseData.message && responseData.message.id) {",
          "        pm.environment.set('message_id', responseData.message.id);",
          "        console.log('Message ID saved:', responseData.message.id);",
          "    }",
          "    ",
          "    // Save first model ID from models list",
          "    if (responseData.models && responseData.models.length > 0) {",
          "        pm.environment.set('model_id', responseData.models[0].id);",
          "        console.log('Model ID saved:', responseData.models[0].id);",
          "    }",
          "}"
        ]
      }
    }
